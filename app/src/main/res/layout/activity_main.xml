<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mukul"
    android:background="#4e515151"
    android:clickable="false"


    android:focusable="true">


    <Button
        
    android:layout_width="65dp"
    android:layout_height="65dp"
    android:text="1"
        android:onClick="onClick"
    android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
    android:id="@+id/button"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="2"
        android:onClick="onClick"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />


    <EditText
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:id="@+id/editText"
        android:textSize="40dp"
        android:text="0"
        android:gravity="right"
        android:background="@drawable/border"
        android:focusableInTouchMode="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff217dff"
        android:outlineProvider="bounds"
        android:layout_marginBottom="50dp"
        android:focusable="true" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="3"
        android:onClick="onClick"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button3"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="4"
        android:onClick="onClick"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button4"
        android:layout_below="@+id/button7"
        android:layout_toLeftOf="@+id/button8"
        android:layout_toStartOf="@+id/button8" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="5"
        android:onClick="onClick"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button5"
        android:layout_below="@+id/button8"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="6"
        android:onClick="onClick"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="7"
        android:onClick="onClick"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button7"
        android:layout_alignBottom="@+id/button17"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="8"
        android:onClick="onClick"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button7"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="9"
        android:onClick="onClick"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button9"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="+"
        android:onClick="onClick"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button10"
        android:layout_alignTop="@+id/button23"
        android:layout_alignLeft="@+id/button12"
        android:layout_alignStart="@+id/button12" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="-"
        android:textSize="30dp"
        android:onClick="onClick"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button11"
        android:layout_alignTop="@+id/button22"
        android:layout_toLeftOf="@+id/button22"
        android:layout_toStartOf="@+id/button22" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="x"
        android:onClick="onClick"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button12"
        android:layout_below="@+id/button16"
        android:layout_alignLeft="@+id/button16"
        android:layout_alignStart="@+id/button16" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="0"
        android:onClick="onClick"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button13"
        android:layout_alignBottom="@+id/button15"
        android:layout_toRightOf="@+id/button14"
        android:layout_toEndOf="@+id/button14" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="."
        android:onClick="onClick"
        android:padding="10dp"
        android:textSize="30dp"
        android:gravity="center|center_vertical"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button14"
        android:layout_below="@+id/button"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="="
        android:onClick="onClick"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button15"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button13"
        android:layout_toEndOf="@+id/button13" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="÷"
        android:onClick="onClick"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button16"
        android:layout_alignTop="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="C"
        android:onClick="onClick"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button17"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/button10"
        android:layout_toEndOf="@+id/button10" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="DELETE"
        android:onClick="onClick"
        android:textSize="11dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button18"
        android:layout_below="@+id/button17"
        android:layout_alignLeft="@+id/button17"
        android:layout_alignStart="@+id/button17" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="^"
        android:onClick="onClick"
        android:padding="10dp"
        android:textSize="30dp"
        android:gravity="center|center_vertical"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button22"
        android:layout_below="@+id/button18"
        android:layout_alignLeft="@+id/button18"
        android:layout_alignStart="@+id/button18" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="√"
        android:onClick="onClick"
        android:padding="10dp"
        android:textSize="30dp"
        android:gravity="center|center_vertical"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_shape"
        android:id="@+id/button23"
        android:layout_below="@+id/button22"
        android:layout_alignLeft="@+id/button22"
        android:layout_alignStart="@+id/button22" />

</RelativeLayout>
