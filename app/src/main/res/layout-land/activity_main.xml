<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mukul"
    android:clickable="true">

    <Button
    android:layout_width="110dp"
    android:layout_height="50dp"
    android:text="1"
        android:onClick="onClick"
    android:textSize="25dp"
    android:textColor="#ff217dff"
    android:id="@+id/button"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="2"
        android:onClick="onClick"
        android:textSize="25dp"
        android:textColor="#ff217dff"
        android:id="@+id/button2"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/editText"
        android:textSize="25dp"
        android:focusableInTouchMode="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="3"
        android:onClick="onClick"
        android:textSize="25dp"
        android:textColor="#ff217dff"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="4"
        android:onClick="onClick"
        android:textSize="25dp"
        android:textColor="#ff217dff"
        android:id="@+id/button4"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="5"
        android:onClick="onClick"
        android:textSize="25dp"
        android:textColor="#ff217dff"
        android:id="@+id/button5"
        android:layout_below="@+id/button2"
        android:layout_toLeftOf="@+id/button6"
        android:layout_toStartOf="@+id/button6" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="6"
        android:onClick="onClick"
        android:textSize="25dp"
        android:textColor="#ff217dff"
        android:id="@+id/button6"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="7"
        android:onClick="onClick"
        android:textSize="25dp"
        android:textColor="#ff217dff"
        android:id="@+id/button7"
        android:layout_below="@+id/button4"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="8"
        android:onClick="onClick"
        android:textSize="25dp"
        android:textColor="#ff217dff"
        android:id="@+id/button8"
        android:layout_below="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="9"
        android:onClick="onClick"
        android:textSize="25dp"
        android:textColor="#ff217dff"
        android:id="@+id/button9"
        android:layout_alignTop="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="+"
        android:onClick="onClick"
        android:textSize="25dp"
        android:textColor="#ff217dff"
        android:id="@+id/button10"
        android:layout_alignTop="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="-"
        android:onClick="onClick"
        android:textSize="25dp"
        android:textColor="#ff217dff"
        android:id="@+id/button11"
        android:layout_below="@+id/button10"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignStart="@+id/button10" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="x"
        android:onClick="onClick"
        android:textSize="25dp"
        android:textColor="#ff217dff"
        android:id="@+id/button12"
        android:layout_above="@+id/button14"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="0"
        android:onClick="onClick"
        android:textSize="25dp"
        android:textColor="#ff217dff"
        android:id="@+id/button13"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="."
        android:onClick="onClick"
        android:padding="10dp"
        android:textSize="25dp"
        android:gravity="center|center_vertical"
        android:textColor="#ff217dff"
        android:id="@+id/button14"
        android:layout_below="@+id/button8"
        android:layout_toLeftOf="@+id/button16"
        android:layout_toStartOf="@+id/button16" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="/"
        android:onClick="onClick"
        android:textSize="25dp"
        android:textColor="#ff217dff"
        android:id="@+id/button16"
        android:layout_alignTop="@+id/button14"
        android:layout_alignLeft="@+id/button12"
        android:layout_alignStart="@+id/button12" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="C"
        android:onClick="onClick"
        android:textSize="25dp"
        android:textColor="#ff217dff"
        android:id="@+id/button19"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/button10"
        android:layout_toEndOf="@+id/button10" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="DELETE"
        android:onClick="onClick"
        android:textSize="17dp"
        android:textColor="#ff217dff"
        android:id="@+id/button20"
        android:layout_below="@+id/button19"
        android:layout_alignLeft="@+id/button19"
        android:layout_alignStart="@+id/button19" />

    <Button
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:text="="
        android:onClick="onClick"
        android:textSize="25dp"
        android:textColor="#ff217dff"
        android:id="@+id/button21"
        android:layout_alignTop="@+id/button12"
        android:layout_toRightOf="@+id/button12"
        android:layout_toEndOf="@+id/button12"
        android:layout_alignBottom="@+id/button16" />

</RelativeLayout>
